<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
  http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <servers>
        <server>
            <!-- Nexus local ledgers-->
            <id>gitlab-maven</id>
            <configuration>
                <httpHeaders>
                <property>
                    <name>Deploy-Token</name>
                    <value>${GITLAB_MAVEN_DEPLOY_TOKEN}</value>
                </property>
                </httpHeaders>
            </configuration>
        </server>
        <server>
            <!-- XS2A impl private repository-->
            <id>gitlab-xs2a-impl</id>
            <configuration>
                <httpHeaders>
                <property>
                    <name>Deploy-Token</name>
                    <value>${GITLAB_XS2A_IMPL_READ_REPOSITORY_TOKEN}</value>
                </property>
                </httpHeaders>
            </configuration>
        </server>
        <server>
            <!-- XS2A ledgers private repository-->
            <id>gitlab-ledgers</id>
            <configuration>
                <httpHeaders>
                <property>
                    <name>Deploy-Token</name>
                    <value>${GITLAB_LEDGERS_READ_REPOSITORY_TOKEN}</value>
                </property>
                </httpHeaders>
            </configuration>
        </server>
    </servers>
</settings>
